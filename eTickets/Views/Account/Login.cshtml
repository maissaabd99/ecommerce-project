@using eTickets.Data.ViewModels; 
@model LoginVM;

@{ 
    ViewData["Title"] = "Log in to your account";
}

<div class="row">
    <div class="col-md-6 offset-3">
       

        @if(TempData["Error"] != null)
            {
                <div class="col-md-12 alert alert-danger">
                    <span><b>Sorry!</b> - @TempData["Error"] </span>
                </div>
            }

        <div class="row">
            <div class="col-md-6 offset-3">
                <p class="text-center">
                    <img src="~/images/e-tech-low-resolution-logo-black-on-transparent-background.png" width="45px" height="40px" />
                    <h4 class="text-center">Log in to your account</h4>
                </p>
                <hr />
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="EmailAddress" class="control-label"></label>
                        <input asp-for="EmailAddress" class="form-control" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input class="btn btn-outline-success form-control" type="submit" value="Login" />
                    </div>
                    <div class="form-group">
                        <a class="btn btn-outline-secondary form-control" asp-controller="Movies" asp-action="Index">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>